cmake_minimum_required(VERSION 3.10)

# Set the project name and version
project(OpenGL_Project VERSION 1.0)

# Specify the C++ standard
set(CMAKE_CXX_STANDARD 17)
set(CMAKE_CXX_STANDARD_REQUIRED True)

# Add the external libraries
add_subdirectory(external/glfw)
include_directories(external/glad/include)

# Add the source files
set(SOURCES
    main.cpp
    src/Shader.cpp
    src/Model.cpp
    src/Renderer.cpp
    src/engine.cpp
)

# Create the executable
add_executable(${PROJECT_NAME} ${SOURCES})

# Link the libraries
target_link_libraries(${PROJECT_NAME} glfw glad)

# Optionally set the output directory for binaries
set(CMAKE_RUNTIME_OUTPUT_DIRECTORY ${CMAKE_BINARY_DIR}/bin)

# Set include directories for your project
target_include_directories(${PROJECT_NAME} PRIVATE ${CMAKE_CURRENT_SOURCE_DIR}/external/glad/include)

# Optionally find and link OpenGL
find_package(OpenGL REQUIRED)
target_link_libraries(${PROJECT_NAME} ${OPENGL_LIBRARIES})
